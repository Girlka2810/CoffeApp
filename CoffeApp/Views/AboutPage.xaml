<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CoffeApp.Views.AboutPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:strings="clr-namespace:CoffeApp"
    BackgroundImageSource="background.png">

    <StackLayout>
        <Frame
            Margin="0,0,0,0"
            Padding="0,20,0,0"
            BackgroundColor="Transparent"
            CornerRadius="0"
            HeightRequest="40">
            <Label
                Margin="0,0,0,0"
                FontFamily="Billabong"
                FontSize="28"
                HorizontalTextAlignment="Center"
                Text="Gorilla Roasters"
                TextColor="Green" />
        </Frame>
        <Frame
            Margin="20,10,20,10"
            Padding="0,0,0,0"
            BackgroundColor="White"
            HasShadow="True"
            HeightRequest="150">
            <Grid Margin="0,0,0,0" Padding="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="20" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="0"
                    Margin="10,10"
                    Source="{Binding CoffeeModel.ImageSourse}" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    Padding="0,0,0,0"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="{Binding CoffeeModel.Name}"
                    TextColor="#24130c"
                    VerticalTextAlignment="End" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    Padding="0,0,0,0"
                    FontSize="10"
                    Opacity="0.15"
                    Text="{Binding CoffeeModel.Producer}"
                    TextColor="#24130c"
                    VerticalTextAlignment="Start" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    FontAttributes="Bold"
                    FontSize="35"
                    Text="{Binding CoffeeModel.Price}"
                    TextColor="#24130c"
                    VerticalTextAlignment="Start" />
            </Grid>
        </Frame>
        <Frame
            Margin="20,0,20,10"
            Padding="0,0,0,0"
            BackgroundColor="White"
            HasShadow="True"
            HeightRequest="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="1" />
                    <RowDefinition />
                    <RowDefinition Height="1" />
                    <RowDefinition />
                    <RowDefinition Height="1" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Source="intensity.ico&gt;" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Intensity"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Command="{Binding Command}"
                    Style="{StaticResource roundedButton}"
                    Text="Strong" />
                <BoxView
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="30,0,30,0"
                    BackgroundColor="Black"
                    Opacity="0.05" />

                <Image
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Source="acidity.jpg&gt;" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Intensity"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Style="{StaticResource roundedButton}"
                    Text="Sharp" />
                <BoxView
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    Margin="30,0,30,0"
                    BackgroundColor="Black"
                    Opacity="0.05" />

                <Image
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Source="preparation.jpg&gt;" />
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Preparation"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Style="{StaticResource roundedButton}"
                    Text="8 minutes" />
                <BoxView
                    Grid.Row="5"
                    Grid.ColumnSpan="3"
                    Margin="30,0,30,0"
                    BackgroundColor="Black"
                    Opacity="0.05" />

                <Image
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Source="size.jpg&gt;" />
                <Label
                    Grid.Row="6"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Size"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="6"
                    Grid.Column="2"
                    Style="{StaticResource roundedButton}"
                    Text="Small" />
            </Grid>
        </Frame>
        <Button
            BackgroundColor="#cabaa3"
            Style="{StaticResource squareButton}"
            Text="{x:Static strings:Strings.placeYourOrderButtonText}" />
        <Button
            BackgroundColor="Transparent"
            BorderColor="#d5d5d5"
            BorderWidth="1"
            Style="{StaticResource squareButton}"
            Text="{x:Static strings:Strings.addToFavouriteButtonText}" />
    </StackLayout>


</ContentPage>